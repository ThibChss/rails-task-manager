<div class="container text-center my-5">
  <h1 class="mb-5">Update your task</h1>

  <%= form_for(@task) do |t| %>
    <div class="my-4">
      <strong><%= t.label :title, 'TITLE', class: 'label-form' %></strong>
      <%= t.text_field :title, placeholder: 'New title here', class: 'p-1' %>
    </div>
    <div class="my-4">
      <strong><%= t.label :details, 'DETAILS', class: 'label-form' %></strong>
      <%= t.text_field :details, placeholder: "New details here", class: 'p-1' %>
    </div>
    <div class="my-4">
      <strong><%= t.label :completed, 'DONE?', class: 'label-form' %></strong>
      <%= t.check_box :completed, class: 'edit-checkbox' %>
    </div>
    <div>
      <%= t.submit 'Edit', class: 'btn create-task me-2' %>
      <%= link_to '<i class="fa-solid fa-house fa-xs"></i> Home'.html_safe, root_path, class: 'btn home-task ms-2' %>
    </div>
  <% end %>
</div>
