<div class="container text-center my-5">
  <h1 class="mb-5"><%= @task.title %></h1>
  <p><span><strong>Details:</strong></span> <%= @task.details %></p>
  <% if @task.completed %>
    <p class="mb-5"><span><strong>Status:</strong></span> Completed <i class="fa-solid fa-circle-check fa-xs check-task"></i></p>
  <% else %>
    <p class="mb-5"><span><strong>Status:</strong></span> Pending <i class="fa-solid fa-pause fa-xs cross-task"></i></p>
  <% end %>

  <div>
    <%= link_to '<i class="fa-solid fa-house fa-xs"></i> Home'.html_safe, root_path, class: 'btn home-task me-2' %>

    <%= link_to '<i class="fa-regular fa-pen-to-square fa-xs"></i> Edit Task'.html_safe, edit_path, class: 'btn edit-task ms-2' %>
  </div>
</div>
